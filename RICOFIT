  <form id="formRegistro">
    <label>Nombre cliente</label>
    <input type="text" id="nombre">

    <label>Fecha</label>
    <input type="date" id="fecha">

    <label>Monto</label>
    <input type="number" id="monto">

    <label>Tipo de pago</label>
    <select id="pago">
      <option value="">Selecciona una opci√≥n</option>
      <option value="Diario">Diario</option>
      <option value="Semanal">Semanal</option>
      <option value="Mensual">Mensual</option>
    </select>

    <div class="botones">
      <button type="button" onclick="buscar()">BUSCAR</button>
      <button type="button" onclick="ingresar()">INGRESA</button>
      <button type="reset">LIMPIAR</button>
    </div>
  </form>

  <!-- Firebase -->
  <script type="module">
    // Importar Firebase
    import { initializeApp } from "https://www.gstatic.com/firebasejs/12.4.0/firebase-app.js";
    import { getDatabase, ref, push, set } from "https://www.gstatic.com/firebasejs/12.4.0/firebase-database.js";

    const firebaseConfig = {
      apiKey: "AIzaSyBF_X8ZZnDhP2bimzzC9sL6VkYR1a4cln8",
      authDomain: "ricofit75-4bce0.firebaseapp.com",
      databaseURL: "https://ricofit75-4bce0-default-rtdb.firebaseio.com",
      projectId: "ricofit75-4bce0",
      storageBucket: "ricofit75-4bce0.firebasestorage.app",
      messagingSenderId: "648414560232",
      appId: "1:648414560232:web:d303ad8b3ab439cd7aae5d",
      measurementId: "G-1LY44KPELW"
    };

    // Inicializar Firebase
    const app = initializeApp(firebaseConfig);
    const db = getDatabase(app);

    // Funci√≥n para ingresar datos
    window.ingresar = function() {
      const nombre = document.getElementById('nombre').value.trim();
      const fecha = document.getElementById('fecha').value;
      const monto = document.getElementById('monto').value;
      const pago = document.getElementById('pago').value;

      if (!nombre || !fecha || !monto || !pago) {
        alert("Por favor completa todos los campos");
        return;
      }

      const nuevoCliente = {
        nombre: nombre,
        fecha: fecha,
        monto: monto,
        pago: pago
      };

      // Guardar en Firebase
      const referencia = ref(db, 'clientes/');
      const nuevoRegistro = push(referencia);
      set(nuevoRegistro, nuevoCliente)
        .then(() => {
          alert("‚úÖ Cliente registrado correctamente");
          document.getElementById("formRegistro").reset(); // limpia el formulario
        })
        .catch((error) => {
          alert("‚ùå Error al guardar: " + error.message);
        });
    };

    // Funci√≥n b√∫squeda (placeholder)
    window.buscar = function() {
      alert("Funci√≥n de b√∫squeda en desarrollo üòÖ");
    };
  </script>
